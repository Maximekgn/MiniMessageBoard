<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
  <div class="chat-container max-w-xl mx-auto p-4 bg-white rounded-lg shadow-md">
    <div class="message-container space-y-4">
      <% messages.forEach(message => { %>
        <div class="message <%= message.user === 'Amando' ? 'sent' : 'received' %> p-4 rounded-lg max-w-xs">
          <div class="message-header text-sm font-bold">
            <%= message.user %>: <%= message.added %>
          </div>
          <div class="message-text mt-2">
            <%= message.text %>
          </div>
          <button class="open-button mt-2 px-4 py-2 bg-blue-500 text-white rounded" onclick="window.location.href='/message/<%= message.text %>'">Open</button>
        </div>
      <% }) %>
    </div>
    <form method="POST" action="/new" class="mt-4">
      <div class="flex space-x-2">
        <input type="text" name="messageUser" placeholder="Your name" required class="flex-grow p-2 border rounded">
        <input type="text" name="messageText" placeholder="Your message" required class="flex-grow p-2 border rounded">
        <button type="submit" class="px-4 py-2 bg-green-500 text-white rounded">Send</button>
      </div>
    </form>
  </div>
</body>
</html>
